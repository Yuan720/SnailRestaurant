<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.snailrestaurant.mapper.MerchantMapper">

    <resultMap id="BaseResultMap" type="com.woniuxy.snailrestaurant.domain.Merchant">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="location" column="location" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,ST_AsText(location) as location,
        status
    </sql>

    <select id="getNear" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include> from merchant
                order by ST_Distance_Sphere(st_geomfromtext(#{query}),location)
    </select>
</mapper>
